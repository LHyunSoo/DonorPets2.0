<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Bottom navigation theme. -->
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/notosanscjkkr_medium</item>
        <item name="android:textSize">8sp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- Widget.MaterialComponents.Chip.Choice -->
    <style name="MeterialComponents" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="StoryDetailText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_marginTop">15dp</item>
        <item name="fontFamily">@font/notosanscjkkr_regular</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
